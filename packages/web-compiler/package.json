{
    "version": "5.2.10",
    "name": "@adaliszk/web-compiler",
    "description": "Web configuration for Vite using Typescript",
    "repository": "github:adaliszk/node-toolbox",
    "homepage": "https://github.com/adaliszk/node-toolbox/tree/release/packages/web-compiler",
    "bugs": "https://github.com/adaliszk/node-toolbox/labels/web-compiler",
    "license": "BSD-2-Clause",
    "types": "dist/compiler.d.ts",
    "main": "dist/compiler.js",
    "type": "module",
    "files": ["dist", "*.md"],
    "scripts": {
        "prebuild": "rm -rf dist",
        "build": "tsup source/compiler.ts --clean --format esm --target node20 --dts",
        "lint": "biome lint --apply ./source",
        "fmt": "biome format . --write"
    },
    "peerDependencies": {
        "vite": "^5.2"
    },
    "dependencies": {
        "@originjs/vite-plugin-federation": "^1.3.5",
        "@types/postcss-import": "^14.0.3",
        "@vitejs/plugin-basic-ssl": "^1.1.0",
        "autoprefixer": "^10.4.19",
        "meow": "^9.0.0",
        "postcss": "^8.4.38",
        "postcss-calc": "^10.0.2",
        "postcss-import": "^16.1.0",
        "postcss-nested": "^6.0.1",
        "postcss-nesting": "^12.1.2",
        "postcss-simple-vars": "^7.0.1",
        "tailwindcss": "^3.4.3",
        "vite": "^5.2.10",
        "vite-plugin-checker": "^0.6.4",
        "vite-plugin-compression2": "^1.1.0",
        "vite-plugin-dts": "^3.9.0",
        "vite-tsconfig-paths": "^4.3.2"
    },
    "devDependencies": {
        "@adaliszk/biome": "workspace:*",
        "@adaliszk/typescript": "workspace:*"
    },
    "keywords": [
        "typescript",
        "vite",
        "web",
        "compiler",
        "tailwind",
        "postcss",
        "module federation",
        "compression",
        "tls encrpytion"
    ]
}
